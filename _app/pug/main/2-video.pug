section#video
	.container
		.content
			+imgs('general-img general-img-back', 'img/backs/video.png', 'Размытие')
			+imgs('general-img general-img-singlestar', 'img/images/video-star.png', 'Одна звезда')
			.video-stars
			.row
				.col-md-10
					+gt('', 'Почему не только психологам необходимо изучить метод современной проективной психологии МАК')
