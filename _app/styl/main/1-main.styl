.main-bg
	display block
	width 1440px
	object-fit: cover
	object-position: center
	height 100%
	max-height: 940px
	margin 0 auto
	left calc(100vw - 1440px)
	right auto
	position relative
	top 0
	@media screen and (min-width 1440px)
		left 0
	@media screen and (max-width 1229px)
		left calc(100vw - 1390px)
	@media screen and (max-width 1199px)
		max-height 800px
	@media screen and (max-width 1100px)
		left calc(100vw - 1340px)
	@media screen and (max-width 1050px)
		max-height: 746px
		left calc(100vw - 1240px)
	@media screen and (max-width 991px)
		display none
.wrapper-abs
	position absolute
	top 0
	left 0
	right 0
	bottom: 0
	@media screen and (max-width 991px)
		position: relative
	&-main
		.content
			padding 120px 0 0
			height 100%
			@media screen and (max-width 1199px)
				padding-top: 70px
			@media screen and (max-width 991px)
				padding 0