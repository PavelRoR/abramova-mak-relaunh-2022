#plan
	padding 90px 0
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
.general-img-plan-stars-1
	width 494px
	height: 372px
	background: url(../img/images/plan-stars-1.png) no-repeat center
	background-size contain
	top -400px
	right -300px
	@media screen and (max-width 1199px)
		background-image: url(../img/images/plan-stars-1-mid.png)
		width 288px
		height: 368px
		right -100px
		top -300px
	@media screen and (max-width 991px)
		right -180px
		top -350px
	@media screen and (max-width 560px)
		background-image: url(../img/images/plan-stars-1-min.png)
		width 313px
		height: 319px
		top calc(50% - 360px)
		right calc(50% - 360px)
.general-img-plan-back
	width 536px
	height: 536px
	background: url(../img/backs/blur.png) no-repeat center
	background-size contain
	top -150px
	left -100px
	z-index -1
	@media screen and (max-width 1199px)
		top 0
	@media screen and (max-width 767px)
		left -120px
		top -180px
		bottom: auto
		right: auto
.general-img-plan-1
	width 65px
	height: 103px
	background: url(../img/images/star-1.png) no-repeat center
	background-size contain
	top -30px
	left -70px
	@media screen and (max-width 1199px)
		left auto
		right 220px
		top auto
		bottom: 230px
	@media screen and (max-width 560px)
		background: none
		display none
.general-img-plan-1-day
	display none
	@media screen and (max-width 560px)
		background: url(../img/images/star-1.png) no-repeat center
		background-size contain
		display block
		width 32px
		height: 50px
		top -50px
		left 150px
.general-img-plan-2-day
	display none
	@media screen and (max-width 560px)
		background: url(../img/images/star-2.png) no-repeat center
		background-size contain
		display block
		width 51px
		height: 81px
		top 0
		left 220px
.general-img-plan-stars-2
	width 900px
	height: 700px
	background: url(../img/images/plan-stars-2.png) no-repeat center
	background-size contain
	bottom: -330px
	right -350px
	@media screen and (max-width 1199px)
		background-image: url(../img/images/plan-stars-2-mid.png)
		width 787px
		height: 536px
		bottom: -280px
		right -250px
	@media screen and (max-width 991px)
		bottom: -50px
		right -450px
	@media screen and (max-width 767px)
		bottom: 100px
		right -500px
	@media screen and (max-width 560px)
		background: none
		display none
.days
	display flex
	align-items: flex-start
	justify-content: space-between
	flex-wrap: wrap
	margin-bottom: 70px
	@media screen and (max-width 767px)
		margin-bottom: 0
	@media screen and (max-width 560px)
		display block
.day
	position relative
	width 30%
	@media screen and (max-width 767px)
		width 46%
		margin-bottom: 50px
	@media screen and (max-width 560px)
		width 100%
	&-title
		text-align center
		font-size: 42px
		font-weight: bold
		color mP
		position relative
		padding-bottom: 20px
		margin-bottom: 40px
		border-bottom: 3px solid mP
		@media screen and (max-width 991px)
			font-size: 32px
		@media screen and (max-width 560px)
			font-size: 26px
			width 136px
			margin-bottom: 35px
		&:before
		&:after
			content: ''
			display block
			position absolute
			width 14px
			height: 14px
			border-radius: 50%
			background-color: mP
			left 0
			bottom: -8px
		&:after
			left auto
			right: 0