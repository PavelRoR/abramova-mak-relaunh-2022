.days
	display flex
	align-items: flex-start
	justify-content: space-between
	flex-wrap: wrap
	margin-bottom: 70px
.day
	width 30%
	// margin 0 auto 30px
	&-title
		text-align center
		font-size: 42px
		font-weight: bold
		color mP
		position relative
		padding-bottom: 20px
		margin-bottom: 40px
		border-bottom: 3px solid mP
		&:before
		&:after
			content: ''
			display block
			position absolute
			width 14px
			height: 14px
			border-radius: 50%
			background-color: mP
			left 0
			bottom: -8px
		&:after
			left auto
			right: 0