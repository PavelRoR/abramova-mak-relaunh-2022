#revs
	padding 90px 0
.slick-dotted.slick-slider
	margin 0 auto
	width 100%
	max-width 940px
.revs-slider-text.slick-dotted.slick-slider
	margin-bottom: 120px
.slick-list
	width 100%
	max-width 590px
	margin 0 auto
.text-rev-link
	border: 3px solid #4E4C4C
	border-radius: 45px
	display block
	margin 0 20px
	overflow hidden
.text-rev-img
	width 100%
	max-width 248px
	margin 0 auto
	display block
	width 100%
.slick-dots
	bottom: -50px
	left 0
	right 0
	margin: 0 auto
	li
		width 16px
		height: 16px
		background: #F0DFFC
		border-radius: 50%
		margin 0 10px
		transition: all .6s ease
		& button:before
			content: none
		&.slick-active
		&:hover
			background: mP
.slick-next,
.slick-prev
	width: 46px
	height: 46px
	border-radius: 50%
	transition: all .6s ease
	&:before
		content: none
.slick-prev
	background: #F0DFFC url(../img/icons/prev.png) no-repeat center
	background-size auto
	&:focus
		background: #F0DFFC url(../img/icons/prev.png) no-repeat center
	&:hover
		background: #D9D9D9 url(../img/icons/prev.png) no-repeat center
.slick-next
	background: #F0DFFC url(../img/icons/next.png) no-repeat center
	background-size auto
	&:focus
		background: #F0DFFC url(../img/icons/next.png) no-repeat center
	&:hover
		background: #D9D9D9 url(../img/icons/next.png) no-repeat center